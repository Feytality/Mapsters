<resources>

    <!-- Base application theme. -->
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/concordia_main_color</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/concordia_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/concordia_main_color</item>
        <item name="android:colorButtonNormal">#2196f3</item>




    </style>
<!--see it you can move a version of this to regular styles-->
    <style name="FlatBtn">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">92dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/primary_roundv21</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:src">@drawable/ic_action_classrooms</item>
        <item name="android:textOn">--</item>
        <item name="android:textOff">OFF</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:background">@drawable/primary_roundv21</item>

    </style>

    <style name="FloatBtn">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:translationZ">1dp</item>
<item name="android:stateListAnimator">@anim/button_elevation</item>
        <item name="android:background">@drawable/primary_flatv21</item>

    </style>
    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/concordia_main_color_alpha</item>
        <item name="sv_showcaseColor">@color/concordia_gold</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/concordia_gold_light</item>
    </style>
</resources>